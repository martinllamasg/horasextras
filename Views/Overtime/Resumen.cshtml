
@model List<HorasExtrasAppClean.Models.OvertimeRowInput>
@{
    ViewData["Title"] = "Resumen de Captura";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Días seleccionados</th>
            <th>Horas por día</th>
            <th>Descripción</th>
            <th>Archivo</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @string.Join(", ", item.SelectedDays)
            </td>
            <td>
                @foreach (var hora in item.HoursPerDay)
                {
                    <div>@hora.Key: @hora.Value hrs</div>
                }
            </td>
            <td>@item.Description</td>
            <td>
                @(item.FileUpload != null ? item.FileUpload.FileName : "No subido")
            </td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Editar</a>
