@model IEnumerable<HorasExtrasAppClean.Models.OvertimeRecord>
@{
    ViewBag.Title = "Resumen de Horas Extra";
    var nombresDias = new[] { "Domingo", "Lunes", "Martes", "Miércoles", "Jueves", "Viernes", "Sábado" };
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="container my-4">
    <div class="row mb-2">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h2 class="fw-bold text-primary mb-3"><i class="fa-solid fa-chart-bar"></i> Resumen Semanal</h2>
            <a asp-action="MisRegistros" class="btn btn-outline-primary rounded-pill px-4 shadow-sm"><i class="fa fa-clock"></i> Mis registros</a>
        </div>
    </div>
    <div class="table-responsive rounded-3 shadow-sm">
        <table class="table align-middle table-striped">
            <thead class="table-light">
                <tr>
                    <th>Semana</th>
                    <th>Total registros</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var grupo in Model.GroupBy(x => x.WeekNumber))
                {
                    <tr>
                        <td class="fw-bold">@grupo.Key</td>
                        <td>@grupo.Count()</td>
                        <td>
                            <!-- Muestra estatus si tienes campo, o puedes poner "En revisión" como ejemplo -->
                            <span class="badge bg-warning text-dark">En revisión</span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
