@model HorasExtrasAppClean.Models.OvertimeEntryModel
@{
    ViewBag.Title = "Editar Registro de Horas Extra";
    var nombresDias = new[] { "Domingo", "Lunes", "Martes", "Miércoles", "Jueves", "Viernes", "Sabado" };
    var diasSeleccionados = Model.DiasSeleccionados ?? new List<int>();
    var horasPorDia = Model.HorasPorDia ?? new List<double>();
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container my-5">
    <h2 class="fw-bold text-primary mb-4"><i class="fa fa-pen"></i> Editar Registro de Horas Extra</h2>
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label">Días y horas</label>
            <div class="table-responsive">
                <table class="table table-borderless mb-0 align-middle" style="min-width:560px">
                    <thead>
                        <tr>
                            @for (int d = 1; d <= 7; d++)
                            {
                                <th class="text-center p-0 fw-normal text-secondary small">@nombresDias[d % 7]</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            @for (int d = 1; d <= 7; d++)
                            {
                                <td class="text-center p-1">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           name="DiasSeleccionados"
                                           id="diasEdit_@d"
                                           value="@(d % 7)"
                                           @(diasSeleccionados.Contains(d % 7) ? "checked" : "") />
                                </td>
                            }
                        </tr>
                        <tr>
                            @for (int d = 1; d <= 7; d++)
                            {
                                <td class="text-center p-1">
                                    <input type="number"
                                           step="0.5"
                                           min="0.5"
                                           max="10"
                                           name="HorasPorDia"
                                           id="horasEdit_@d"
                                           class="form-control form-control-sm mx-auto"
                                           style="width:60px;"
                                           placeholder="hrs"
                                           value="@(horasPorDia.Count > d - 1 ? horasPorDia[d - 1] : "")"
                                           @(diasSeleccionados.Contains(d % 7) ? "" : "disabled") />
                                </td>
                            }
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label">Detalle de actividades</label>
            <textarea class="form-control" rows="2" maxlength="400" required name="DetalleActividades">@Model.DetalleActividades</textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Nuevo archivo (opcional, PDF/JPG, máx 4MB)</label>
            <input class="form-control" type="file" accept=".pdf,.jpg,.jpeg" name="ArchivoAdjunto" />
        </div>
        <button type="submit" class="btn btn-primary rounded-pill px-4"><i class="fa fa-save"></i> Guardar Cambios</button>
        <a href="@Url.Action("MisRegistros", "Overtime")" class="btn btn-outline-secondary rounded-pill ms-3">Cancelar</a>
    </form>
</div>
